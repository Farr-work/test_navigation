<Window x:Class="navigation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SIS Dashboard Demo" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF333333">
            <TextBlock Text="SIS" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="20"/>

            <Button x:Name="BtnDashboard" 
                    Content="Dashboard" 
                    FontSize="16" 
                    Margin="10,5" 
                    Padding="10"
                    Click="BtnDashboard_Click"/>

            <Button x:Name="BtnStudents" 
                    Content="Students" 
                    FontSize="16" 
                    Margin="10,5" 
                    Padding="10"
                    Click="BtnStudents_Click"/>

            <Button x:Name="BtnCourses" 
                    Content="Courses" 
                    FontSize="16" 
                    Margin="10,5" 
                    Padding="10"
                    Click="BtnCourses_Click"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" Grid.Column="1" />

    </Grid>
</Window>